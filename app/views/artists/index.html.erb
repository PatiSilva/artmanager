<h1>Listing artists</h1>

<table>
  <tr>
    <th>Last name</th>
    <th>First name</th>
    <th>Address1</th>
    <th>Address2</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Country</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @artists.each do |artist| %>
  <tr>
    <td><%= artist.last_name %></td>
    <td><%= artist.first_name %></td>
    <td><%= artist.address1 %></td>
    <td><%= artist.address2 %></td>
    <td><%= artist.city %></td>
    <td><%= artist.state %></td>
    <td><%= artist.zip %></td>
    <td><%= artist.country %></td>
    <td><%= artist.phone %></td>
    <td><%= artist.email %></td>
    <td><%= artist.url %></td>
    <td><%= link_to 'Show', artist %></td>
    <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
    <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

