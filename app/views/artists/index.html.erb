<h1>Artists</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Street Address</th>
    <th>Additional Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Country</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Website</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @artists.each do |artist| %>
  <tr>
    <td><%= artist.last_name.empty? ? artist.company_name : artist.last_name << ", " << artist.first_name %></td>
    <td><%= artist.address1 %></td>
    <td><%= artist.address2 %></td>
    <td><%= artist.city %></td>
    <td><%= artist.state %></td>
    <td><%= artist.zip %></td>
    <td><%= artist.country %></td>
    <td><%= artist.phone %></td>
    <td><%= artist.email %></td>
    <td><%= artist.url %></td>
    <td><%= link_to 'Show', artist %></td>
    <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
    <td><%= link_to 'Delete', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add a New Artist', new_artist_path %>
