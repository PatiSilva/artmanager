<h1>Inventory</h1>

<table>
  <tr>
    <th>Artist</th>
    <th>Description</th>
    <th>Quanity</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @inventories.each do |inventory| %>
  <tr>
    <td><%= inventory.artist.last_name.empty? ? inventory.artist.company_name : inventory.artist.last_name << ", " << inventory.artist.first_name %></td>
    <td><%= inventory.description %></td>
    <td><%= inventory.quanity %></td>
    <td><%= inventory.price %></td>
    <td><%= link_to 'Show', inventory %></td>
    <td><%= link_to 'Edit', edit_inventory_path(inventory) %></td>
    <td><%= link_to 'Delete', inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

